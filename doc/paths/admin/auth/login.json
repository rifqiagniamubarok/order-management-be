{
  "post": {
    "summary": "Login admin",
    "tags": ["Admin - Auth"],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "email": { "type": "string", "example": "admin@yopmail.com" },
              "password": { "type": "string", "example": "superadmin" }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "User successfully registered",
        "content": {
          "application/json": {
            "examples": {
              "SuccessResponse": {
                "value": {
                  "success": true,
                  "data": {
                    "firstName": "user",
                    "lastName": "user",
                    "email": "superadmin@yopmail.com",
                    "photo": "",
                    "role": "admin",
                    "token": ""
                  }
                }
              }
            }
          }
        }
      },
      "400": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "examples": {
              "SuccessResponse": {
                "value": {
                  "success": false,
                  "error": "Email or password wrong"
                }
              }
            }
          }
        }
      },
      "500": {
        "description": "Internal service error",
        "content": {
          "application/json": {
            "examples": {
              "SuccessResponse": {
                "value": {
                  "success": false,
                  "error": "Internal server error"
                }
              }
            }
          }
        }
      }
    }
  }
}
